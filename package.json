{
    "name": "angular-workflow-example",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {

        "init"                       : "npm i && run-p init:*",
        "init:models"                : "cd app/models && npm i",
        "init:backend"               : "cd app/backend && npm i",
        "init:frontend"              : "cd app/frontend && npm i",
        "init:prep"                  : "npm run prep",

        "clean"                      : "run-s clean:*",
        "clean:models-build"         : "rm -rf app/models/build",
        "clean:models-nodemodules"   : "rm -rf app/models/node_modules",
        "clean:backend-nodemodules"  : "rm -rf app/backend/node_modules",
        "clean:frontend-nodemodules" : "rm -rf app/frontend/node_modules",
        "clean:frontend-angular"     : "rm -rf app/frontend/.angular",
        "clean:frontend-dist"        : "rm -rf app/frontend/dist",
        "clean:root"                 : "rm -rf node_modules",

        "prep"                       : "run-s prep:*",
        "prep:models"                : "npm run build:models",

        "dev"                        : "npm run prep && concurrently \"npm:dev:*\"",
        "dev:models"                 : "cd app/models && npm run dev",
        "dev:backend"                : "cd app/backend && npm run dev",
        "dev:frontend"               : "cd app/frontend && npm run dev",

        "build"                      : "run-s build:*",
        "build:models"               : "cd app/models && npm run build",
        "build:frontend"             : "cd app/frontend && npm run build"

    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^7.6.0",
        "npm-run-all": "^4.1.5"
    }
}
