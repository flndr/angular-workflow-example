{
    "$schema"         : "https://json.schemastore.org/tsconfig",
    "display"         : "Node 18",

    "compilerOptions" : {
        "lib"                              : [
            "esnext",
            "dom"
        ],
        "module"                           : "commonjs",
        "target"                           : "es2022",
        "strict"                           : true,
        "strictPropertyInitialization"     : false,
        "esModuleInterop"                  : true,
        "skipLibCheck"                     : true,
        "forceConsistentCasingInFileNames" : true,
        "outDir"                           : "build",
        "declaration"                      : true
    },

    "include"         : [
        "src/**/*"
    ]
}
